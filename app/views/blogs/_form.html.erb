
      <%= simple_form_for(@blog) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :lead %>
          <%= f.input :content %>
          <%= f.input :author %>
          <%= f.input :meta_desc %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
