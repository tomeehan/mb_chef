



 <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-sm-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1><%= @blog.title %></h1>

                <!-- Author -->
                <p class="lead">
                    by <%= @blog.author %>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @blog.created_at.strftime("%e %B %Y") %></p>

                <hr>

                <!-- Preview Image -->
				<div class="lead-img">
					<p><%= markdown(@blog.image_link) %></p>
				</div>
                <!-- Post Content -->
                <p class="lead"><%= markdown(@blog.lead) %></p>
                
				<p><%= markdown(@blog.content) %></p>
                <hr>

               	<% if user_signed_in? && current_user.admin == true %>
					<p><%= link_to 'Edit', edit_blog_path(@blog) %></p>
				<% end %>
				<%= current_user.id %>
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-sm-4">

                <!-- Blog Categories Well -->
                <div class="well" style="margin-top: 25vh;">
                    <h4>Recent Posts</h4>
					    <% @blogs.each do |blog| %>
					        
					        <p><%= link_to blog.title, blog %>, by <%= blog.author %> (<%= @blog.created_at.strftime("%e %B %Y") %>)</p>

					    <% end %>
                    </div>
                    <!-- /.row -->
                </div>


            </div>

        </div>

    </div>
    <!-- /.container -->