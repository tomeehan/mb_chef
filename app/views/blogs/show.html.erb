<div class="container">
    <div class="row">
        <!-- Blog Post Content Column -->
        <div class="col-sm-8">
            <!-- Blog Post -->
            <!-- Title -->
            <h1><%= @blog.title %></h1>
            <!-- Author -->
            <p class="lead">
                by <%= @blog.author %>
            </p>
            <hr>
            <!-- Date/Time -->
            <div class="read-link">
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @blog.created_at.strftime("%e %B %Y") %></p>
                <% if user_signed_in? && current_user.admin == true %>
                    <%= link_to edit_blog_path(@blog) do %> 
                        <i class="glyphicon glyphicon-pencil"></i> Edit Post
                     <% end %>                     
                <% end %>
            </div>    
            <hr>

            <!-- Preview Image -->
			<div class="lead-img">
				<p><%= markdown(@blog.image_link) %></p>
			</div>
            <!-- Post Content -->
            <div class="lead">
                <%= markdown(@blog.lead) %>
            </div>
            
			<div class="content">
                <%= markdown(@blog.content) %>
            </div>
            <hr>


			
            <% if user_signed_in? %>
                <%= current_user.id %>
            <% end %>
        </div>
        <!-- Blog Sidebar Widgets Column -->
        <div class="col-sm-4">
            <!-- Blog Categories Well -->
            <div class="well recent-blogs" style="margin-top: 25px;">
                <h4>Recent Posts</h4>
                <% @blogs.each do |blog| %>
                    <p>
                        <%= link_to blog.title, blog %>, by <%= blog.author %> (<%= @blog.created_at.strftime("%e %B %Y") %>)
                    </p>
                <% end %>

                <div class="read-link">
                    <% if user_signed_in? && current_user.admin == true %>
                        <%= link_to new_blog_path do %> 
                            <i class="glyphicon glyphicon-pencil"></i> New Post
                        <% end %> 
                    <% end %>
                </div>                    
            </div>
        <!-- /.row -->
        </div>


</div>

    </div>

</div>
<!-- /.container -->