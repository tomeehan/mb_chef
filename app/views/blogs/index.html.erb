<div class="row blog">
  <div class="col-lg-12 blog-title ">
    <h1>The Minibarra Chef Blog</h1>
    <div class="col-sm-6 col-sm-offset-3">
      <p>Stay ahead of the curve with our 7-part email course on how to get more customers in your restaurant</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="col-sm-8">
    <!-- Blog Post -->
    <% @blogs.each do |blog| %>
    <!-- Title -->
    <div class="blog-title-link">
      <h2><%= link_to blog.title, blog %></h2>
    </div>
    <!-- Author -->
    <hr>
    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Posted on <%= blog.created_at.strftime("%e %B %Y") %> by <%= blog.author %></p>
    <hr>
    <div class="lead-img">
      <p><%= markdown(blog.image_link) %></p>
    </div>
    <!-- Post Content -->
    <div class="content">
      <%= markdown(blog.lead) %>
    </div>
    <div class="read-link">
      <%= link_to "Read now", blog %> | 
      <% if user_signed_in? && current_user.admin == true %>
      <%= link_to edit_blog_path(blog) do %> 
      <i class="glyphicon glyphicon-pencil"></i> Edit Post
      <% end %> 
      <% end %>
    </div>
    <hr>
    <% end %>
  </div>
  <!-- Blog Sidebar Widgets Column -->
  <div class="col-sm-4">
    <!-- Blog Categories Well -->
    <div class="well recent-blogs" style="margin-top: 20px;">
      <h4>Recent Posts</h4>
      <% @blogs.each do |blog| %>
      <p>
        <%= link_to blog.title, blog %>, by <%= blog.author %> (<%= blog.created_at.strftime("%e %B %Y") %>)
      </p>
      <% end %>
      <div class="read-link">
        <% if user_signed_in? && current_user.admin == true %>
        <%= link_to new_blog_path do %> 
        <i class="glyphicon glyphicon-pencil"></i> New Post
        <% end %> 
        <% end %>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>
<!-- /.container -->
<p id="notice"><%= notice %></p>