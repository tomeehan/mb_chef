<div class="row">
<div class="hero-container" id="your-element">
    <div class="row">
        <div class="col-md-12">
            <div class="cta">
                <h1><%= t "pages.home.pane1.hero" %></h1>
                <h2><%= t "pages.home.pane1.subtitle" %></h2>
                <div class="btn-container">
                    
                    <!-- <a class="btn btn-secondary btn-large" href="/pricing" role="button">Pricing</a> -->
                    <a class="btn btn-primary btn-large" href="/pricing" role="button"><%= t "pages.home.pane1.primary-btn" %></a>
