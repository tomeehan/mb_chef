                    <!-- Macbook + iPhone img. Displayed at >768px width -->
                    <%= image_tag('/images/Minibarra_Ticks_iPhone+MacbBook(small).png') %>
                </div>
                <div class="tablet-hero-img">
                    <!-- iPhone img. Hidden at >768px width; displayed between 730-768px width; display: none at <730px width. -->
                    <%= image_tag('/images/Minibarra-iPhone-7.png') %>
                </div>
            </div>
        </div>
    </div>
</div>
