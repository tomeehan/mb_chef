<!DOCTYPE html>
<html>
  <head>
    <title>Minibarra Chef</title>
    <%= csrf_meta_tags %>

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="white">
    <link rel="apple-touch-icon" href="http://www.minibarra.com/wp-content/uploads/2016/12/Minibarra-Chef-iOS-App-Icon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    
	



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery', 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Pacifico" rel="stylesheet">
    <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>

  </head>
  <body>
  	<div id="outer-wrap">
  		<div class="navbar-wrap">
			<div class="navbar navbar-default">
				<div class="container">
					<div class="navbar-header">
						<%= link_to root_path do %>
							<p class="navbar-brand"><span style="font-family: 'Pacifico', sans-serif; font-size: 150%;">minibarra</span> | Chef</p>
						<% end %>
					</div>


					<ul class="nav navbar-nav">		
						
					</ul>

					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
							<li><%= link_to "Today", '/ticks?stage=Morning' %></li>
							<li><%= link_to "Reports", ticks_path(:active => "false") %></li>
							<li><%= link_to "Tasks", tasks_path %></li>
							<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img src="http://www.minibarra.com/wp-content/uploads/2016/11/chef.png" alt=""> <span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
									<li><%= link_to 'Staff', staffs_path %></li>
									<li role="separator" class="divider"></li>
									<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
								</ul>
							</li>
						<% else %>
							<li><a href="/pricing">Pricing</a></li>
							<li><%= link_to "Log in", new_user_session_path %></li>
							<li><a class="btn btn-primary btn-large" href="/users/sign_up" role="button" style="color: white;">Request an Invite</a></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>







	<% 
=begin %>
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% 
=end %>

    <%= yield %>

<% if user_signed_in? %>
<footer>
	<div class="fixed-nav-bar-wrap">
		<div class="fixed-nav-bar">
			<div class="col-xs-3">
				<a href="/ticks?stage=Morning">
				<div class="fixed-nav-bar-item">
					<i class="fa fa-check-square-o"></i>
					<p>Today</p>
				</div>
				</a>
			</div>
			<div class="col-xs-3">
				<a href="/ticks?active=false">
				<div class="fixed-nav-bar-item">
					<i class="fa fa-book"></i>
					<p>Reports</p>
				</div>
				</a>
			</div>
			<div class="col-xs-3">
				<a href="/tasks">
				<div class="fixed-nav-bar-item">
					<i class="fa fa-pencil-square-o"></i>
					<p>Tasks</p>
				</div>
				</a>
			</div>
			<div class="col-xs-3">
				<%= link_to edit_user_registration_path do %>
				<div class="fixed-nav-bar-item">
					<i class="fa fa-user-circle-o"></i>
					<p>Account</p>
				</div>

				<% end %>
			</div>
		</div>
	</div>
	<div class="bottom-padding">
		
	</div>
</footer>
<% end %>

  </body>
</html>
