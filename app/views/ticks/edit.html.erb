<div class="container">
	<br>
	<br>
	<br>
</div>
<div class="col-md-6 col-md-offset-3">
	<div class="new-book-form">
		<h1>Editing <%= @tick.task.name %></h1>


		<%= simple_form_for(@tick) do |f| %>

			 <div class="form-material">
			 	<%= f.input :complete %>
			 	<% if @tick.task.category.name == "Temperature" %>
			 		<%= f.input :temperature, autofocus: true %>
			 	<% end %>

			<div class="field">
				<%= select_tag(:staff_id, options_for_select(@staffs), :prompt => "Select a staff") %>
			</div>

			 </div>

			  <div class="new-btn">
			  	<%= f.button :submit, "Update #{@tick.task.category.name}" , :class => 'waves-effect btn-large' %>
			  </div>
		<% end %>

		<%= link_to 'Show', @tick %> |
		<%= link_to 'Back', ticks_path %>

	</div>
</div>

