<div class="col-md-6 col-md-offset-3">
	<div class="new-book-form">
		<h2>Sign up</h2>

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  	<%= f.error_notification %>

		  <div class="form-material">
		  	<br>
		  	<h4>Personal details</h4>
		  	<div class="first-name">
          	  <%= f.input :first_name, required: true, autofocus: true, label: false , placeholder: "First name (required)" %>
        	</div>

	        <div class="last-name">
	          <%= f.input :last_name, required: true, label: false, placeholder: "Last name (required)" %>
	        </div>
		    <%= f.input :email, required: true, placeholder: "Email (required)" %>
			<br>
		    <h4>Choose your password</h4>
		    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
		    <%= f.input :password_confirmation, required: true %>
		  </div>

		  <div class="new-btn">
			<%= f.button :submit, :class => 'waves-effect btn-large' %>
		  </div>
		
		
		<%= render "devise/shared/links" %>

	<% end %>
</div>
