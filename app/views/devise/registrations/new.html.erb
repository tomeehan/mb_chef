<div class="blue-background">
	<div class="container">	
		<div class="col-md-6 col-md-offset-3 well signin">

				<h2>Request invite</h2>

					<%= simple_form_for(resource, :as => resource_name,
		                      :url => registration_path(resource_name),
		                      wrapper_mappings: { boolean: :vertical_boolean }) do |f| %>
				  	<%= f.error_notification %>


				  	<div class="first-name">
		          	  <%= f.input :first_name, required: true, autofocus: true, label: false , placeholder: "First name (required)" %>
		        	</div>

			        <div class="last-name">
			          <%= f.input :last_name, required: true, label: false, placeholder: "Last name (required)" %>
			        </div>
				    <%= f.input :email, required: true, label: false, placeholder: "Email (required)" %>
				    <%= f.input :password, required: true, label: false, placeholder: "Password (required)", hint: ("  #{@minimum_password_length} characters minimum" if @minimum_password_length) %>
				    <%= f.input :password_confirmation, label: false, placeholder: "Password confirmation (required)",required: true %>


				  <div class="new-btn">
					<%= f.button :submit, 'Request Invitation',:class => 'btn-primary btn-block btn-lg' %>
				  </div>

				
				
				

			<% end %>
		</div>
		
		<div class="col-md-6 col-md-offset-3 shared">
			<%= render "devise/shared/links" %>
		</div>	

		<div class="col-md-6 col-md-offset-3 well signin">
			<h4>Why is Minibarra invite only?</h4>
			<hr>
			<p>Because</p>
		</div>
	</div>
</div>	