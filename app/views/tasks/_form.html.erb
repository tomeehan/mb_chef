<%= simple_form_for @task do |f| %>
    <div class="field">


      <%# LOCAL TEXT BOX %>
      <% if @categories == nil %>
        <p>P</p>
      <% else %>
        <div class="select-container">
          <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category", :id => "e2") %>
        </div>
      <% end %>
    </div>
    <br>



      <%# LOCAL TEXT BOX %>
	    <%= f.input :name, label: false, placeholder: "Task Name" %>
      <%# LOCAL TEXT BOX %>
	    <%= f.input :description, label: false, placeholder: "Task description" %>
          <div class="field">
      <% if @categories == nil %>
      <p>p</p>
      <% else %>
      <div class="select-container">
        <%# LOCAL TEXT BOX %>
        <%= select_tag(:regularity_id, options_for_select(@regularities), :prompt => "Regularity" , :id => "e1") %>
      </div>
      <% end %>
    </div>

            <%# LOCAL TOGGLE SWITCHES %>
            <%= f.label :starting, :class => 'starting-checkbox' do %>
                <%= f.check_box :starting,as: :boolean, checked_value: true, unchecked_value: false %>
                <i class="icon-"></i>
            <% end %>
              <%= f.label :midday, :class => 'midday-checkbox' do %>
                <%= f.check_box :midday,as: :boolean, checked_value: true, unchecked_value: false %>
                <i class="icon-"></i>
            <% end %>
          <%= f.label :ending, :class => 'ending-checkbox' do %>
                <%= f.check_box :ending,as: :boolean, checked_value: true, unchecked_value: false %>
                <i class="icon-"></i>
            <% end %> 


  	<div class="new-btn">
      <%# LOCAL BUTTON %>

    	<%= f.button :submit, "Create Task", :class => 'btn-primary btn-block btn-lg' %>
  	</div>
<% end %>
<script>$( "#e1" ).select2({
    theme: "bootstrap"
});</script>
  <script>
    $(document).ready(function() { $("#e1").select2(); });
  </script>
