<%- if params[:controller] == 'tasks' and params[:action] == 'new' %>
  <body data-turbolinks="false">
<%- else %>
  <body data-turbolinks="true">
<%- end %>

<script>
	$(document).ready(function () {
    	$('.hidden').fadeIn(500).removeClass('hidden');;
	});
</script>

<div class="form-container hidden" id="fadein">
	<div class="col-md-4 col-md-offset-4 well signin">
		<div class="back-btn">
			<%= link_to ticks_path do %>
				<span class="glyphicon glyphicon-chevron-left"></span> <p>Back</p>
			<% end %>
		</div>

			<h1>New Task</h1>
			
			<%= render 'form', task: @task %>



	</div>
</div>

