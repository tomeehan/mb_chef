<div class="col-md-6 col-md-offset-3">
	<div class="new-book-form">
		<h1>Edit Task</h1>
		<%= simple_form_for @task do |f| %>
		  <div class="form-material">
		  	<div class="field">
    		  <%= select_tag(:regularity_id, options_for_select(@regularities), :prompt => "Select a regularity") %>
  		  </div>
		    <p>Category: <%= @task.category.name %></p>
		    <%= f.input :name %>
		    <%= f.input :description %>
		    <%= f.input :starting, as: :boolean, checked_value: true, unchecked_value: false %>
      		<%= f.input :midday, as: :boolean, checked_value: true, unchecked_value: false %>
      		<%= f.input :ending, as: :boolean, checked_value: true, unchecked_value: false %>
		</div>
		  <div class="new-btn">
		    <%= f.button :submit, :class => 'waves-effect btn-large' %>
		  </div>
		<% end %>

		<%= link_to 'Back', @task %>
	</div>
</div>